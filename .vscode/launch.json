{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chatbot Application",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/start-app.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Launch with Browser",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/launch-browser.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch .NET API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-api",
      "program": "${workspaceFolder}/ChatbotApi/bin/Debug/net9.0/ChatbotApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/ChatbotApi",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch Angular Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/chatbot-frontend/node_modules/.bin/ng.cmd",
      "args": ["serve", "--open", "--port", "4200"],
      "cwd": "${workspaceFolder}/chatbot-frontend",
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceFolder}/chatbot-frontend/node_modules/.bin/ng.cmd"
      },
      "linux": {
        "program": "${workspaceFolder}/chatbot-frontend/node_modules/.bin/ng"
      },
      "osx": {
        "program": "${workspaceFolder}/chatbot-frontend/node_modules/.bin/ng"
      }
    },
    {
      "name": "Debug E2E Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/chatbot-frontend/node_modules/.bin/playwright",
      "args": ["test", "--debug"],
      "cwd": "${workspaceFolder}/chatbot-frontend",
      "console": "integratedTerminal",
      "env": {
        "CI": "false"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack App",
      "configurations": ["Launch .NET API", "Launch Angular Frontend"],
      "stopAll": true,
      "preLaunchTask": "install-frontend-deps"
    },
    {
      "name": "Quick Launch (Browser)",
      "configurations": ["Launch with Browser"],
      "stopAll": true
    }
  ]
}
